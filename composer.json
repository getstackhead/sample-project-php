	],
	"repositories": [
		{ "type": "vcs", "url": "git@github.com:mackerelserver/project-validator.git" },
		{ "type": "vcs", "url": "git@github.com:mackerelserver/deployment.git" }
	],
	"require": {
		"mackerelserver/deployment": "dev-master",
		"mackerelserver/project-validator": "dev-master"
	},
	"scripts":{
		"mackerel-submodules": [
			"cd vendor/mackerelserver/deployment && git submodule sync && git submodule update --init"
		],
		"post-install-cmd": [
			"@mackerel-submodules"
		],
		"post-update-cmd": [
			"@mackerel-submodules"
		]
	}
}
